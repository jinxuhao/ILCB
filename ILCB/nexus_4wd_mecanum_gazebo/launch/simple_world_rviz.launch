<?xml version="1.0"?>
<launch>

  <param name="robot_description"
    command="$(find xacro)/xacro --inorder '$(find uav_gazebo)/urdf/uav.urdf'" />
  
  <node name ="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name ="link1_broadcaster" pkg="tf" type="static_transform_publisher" args="1 0 0 0 0 0 1 /world /odom 100" />
  <node name="showpath_node" pkg="showpath" type="showpath.py"/>
  <node name="rviz" pkg="rviz" type="rviz"
        args="-d $(find uav_gazebo)/config/uav.rviz" required="true"/>
  
  
</launch>